<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.moonmonkeylabs.realmrecyclerview.example.co.moonmonkeylabs.realmrecyclerview.ChatListActivity">

    <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
        android:id="@+id/chat_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:rrvLayoutType="LinearLayout"
        app:rrvEmptyMessage="No conversation list available"
        tools:listitem="@layout/chat_item_view"/>

    <ProgressBar
        android:id="@+id/chat_list_loading"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:indeterminate="true"
        android:visibility="gone" />


</FrameLayout>
